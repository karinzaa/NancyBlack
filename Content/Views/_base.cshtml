@inherits NantCom.NancyBlack.NancyBlackRazorViewBase
@{
    Layout = "_base_plain";
}

@section Head {

    @this.RenderSection("Head", false)
}

@section Style {
    
    <link href="/Content/ncb-dependencies.css" rel="stylesheet" />

    <style>
        .modal-backdrop {
            position: fixed;
        }
    </style>
    
    @if (this.Request.Url.HostName == "localhost")
    {
        @this.Html.Raw(NantCom.NancyBlack.Configuration.ModuleResource.Css)
    }
    else
    {
        <link href="/__bundle/css" rel="stylesheet" />
    }

    @this.RenderSection("Style", false)
}

@section Scripts {
    @RenderSection("Scripts", false)
}

@section Script {
    @RenderSection("Script", false)
}


@RenderBody()
