

@inherits NantCom.NancyBlack.NancyBlackRazorViewBase
@{
    Layout = "_superadmin.cshtml";
}
@section Title
{
    Administration - site
}
<div ng-module="siteModule"
     ng-controller="siteController as ctrl">

    <h1 class="page-header">
        Manage site
        <i class="fa fa-spinner fa-spin" ng-show="isBusy"></i>
    </h1>

    <div style="margin-bottom: 30px">
        This page helps you manage site in this system.

    </div>

    <div class="alert alert-danger">
        This page was auto-generated by NancyBlack Engine on: 2/3/2015 2:53:51 PM <br />
        If you generate this page again, all custom changes will be lost.
        <p class="margin-top: 5px">

            <a class="btn btn-lg btn-danger" href="@(this.RenderContext.Context.Request.Path)?regenerate=true">Generate Again</a>
        </p>
    </div>

    <div id="siteModal"
         class="modal fade" data-keyboard="false" data-backdrop="static">

        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button"
                            class="close"
                            data-dismiss="modal">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    <button type="button"
                            ng-hide="object.id == null"
                            ng-click="ctrl.delete(object)"
                            class="close text-warning"
                            style="margin-right: 10px">
                        <span class="glyphicon glyphicon-trash"></span>
                    </button>
                    <h2 class="modal-title">
                        <span ng-show="object.id == null">Create</span>
                        <span ng-show="object.id != null">Edit</span>
                        site
                    </h2>
                </div>
                <div class="modal-body">



                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                            <li class=""><a href="#General" role="tab" data-toggle="tab">General</a></li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane fade in active" id="General">
                            <form role="form">

                                        <div class="dropdown form-group">

                                            <label class="control-label" for="start">RegisteredDate</label>

                                            <p class="input-group">
                                                <input type="text"
                                                       class="form-control"
                                                       datepicker-popup="dd MMMM yyyy, HH:mm"
                                                       ng-model="object.RegisteredDate"
                                                       is-open="datepickeropen['RegisteredDate']"
                                                       close-text="Close" />
                                                <span class="input-group-btn">
                                                    <button type="button"
                                                            class="btn btn-default"
                                                            ng-click="ctrl.opendatepicker($event, 'RegisteredDate')">
                                                        <i class="glyphicon glyphicon-calendar"></i>
                                                    </button>
                                                </span>
                                            </p>

                                        </div>
                                        <div class="dropdown form-group">

                                            <label class="control-label" for="start">ExpireDate</label>

                                            <p class="input-group">
                                                <input type="text"
                                                       class="form-control"
                                                       datepicker-popup="dd MMMM yyyy, HH:mm"
                                                       ng-model="object.ExpireDate"
                                                       is-open="datepickeropen['ExpireDate']"
                                                       close-text="Close" />
                                                <span class="input-group-btn">
                                                    <button type="button"
                                                            class="btn btn-default"
                                                            ng-click="ctrl.opendatepicker($event, 'ExpireDate')">
                                                        <i class="glyphicon glyphicon-calendar"></i>
                                                    </button>
                                                </span>
                                            </p>

                                        </div>
                                        <input type="text" name="HostName" title="HostName"
                                               ncb-textbox
                                               ng-model="object.HostName" />
                                        <input type="text" name="Alias" title="Alias"
                                               ncb-textbox
                                               ng-model="object.Alias" />
                                        <input type="text" name="Theme" title="Theme"
                                               ncb-textbox
                                               ng-model="object.Theme" />
                                        <input type="text" name="Roles" title="Roles"
                                               ncb-textbox
                                               ng-model="object.Roles" />
                                        <input type="text" name="RegisteredBy" title="RegisteredBy"
                                               ncb-textbox
                                               ng-model="object.RegisteredBy" />
                                        <input type="text" name="SiteType" title="SiteType"
                                               ncb-textbox
                                               ng-model="object.SiteType" />
                                        <input type="text" name="AttachmentUrl" title="AttachmentUrl"
                                               ncb-textbox
                                               ng-model="object.AttachmentUrl" />
                            </form>
                        </div>                            
                    </div>

                    <div class="alert alert-danger alert-dismissible" ng-show="error != null">
                        {{error.message}}
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-success btn-lg"
                            data-target="#siteForm"
                            ng-disabled="isBusy"
                            ng-click="ctrl.save(object)">

                        <span>
                            <span class="busycenter" ng-show="isBusy">&nbsp;&nbsp;&nbsp;&nbsp;</span>
                            <span ng-show="object.id == null">Create</span>
                            <span ng-show="object.id != null">Save</span>
                        </span>
                    </button>
                </div>
            </div>
        </div>

    </div>


    <table id="siteTable"
           class="table table-striped table-hover"
           style="width: 100%">
        <thead>
            <tr>
                        <th>RegisteredDate</th>
                        <th>ExpireDate</th>
                        <th>HostName</th>
                        <th>__createdAt</th>
                        <th>__updatedAt</th>
                        <th>Alias</th>
                        <th>Theme</th>
                        <th>Roles</th>
                        <th>RegisteredBy</th>
                        <th>SiteType</th>
                        <th>AttachmentUrl</th>
                <th class="commandColumn"></th>
            </tr>

        </thead>
        <tr ng-repeat="item in list">
                    <td>{{item.RegisteredDate | date:'dd MMMM yyyy, HH:mm' }}</td>
                    <td>{{item.ExpireDate | date:'dd MMMM yyyy, HH:mm' }}</td>
                    <td>{{item.HostName }}</td>
                    <td>{{item.__createdAt | date:'dd MMMM yyyy, HH:mm' }}</td>
                    <td>{{item.__updatedAt | date:'dd MMMM yyyy, HH:mm' }}</td>
                    <td>{{item.Alias }}</td>
                    <td>{{item.Theme }}</td>
                    <td>{{item.Roles }}</td>
                    <td>{{item.RegisteredBy }}</td>
                    <td>{{item.SiteType }}</td>
                    <td>{{item.AttachmentUrl }}</td>
            <td style="white-space: nowrap">

                <button class="btn btn-primary"
                        ng-click="ctrl.view(item)">
                    <span class="glyphicon glyphicon-pencil"></span>
                </button>
            </td>
        </tr>



    </table>

    <div>
        <button class="btn btn-success"
                ng-click="ctrl.create()">
            <span class="glyphicon glyphicon-plus-sign"></span>
            <span>Create new site</span>
        </button>
    </div>

    <div class="alert alert-danger"
         ng-show="error">
        {{error.message}}
    </div>
</div>



@section Scripts
{

<script>

    (function () {

        var module = angular.module('siteModule', ['ui.bootstrap', 'ncb-database']);

        module.controller("siteController", function ($scope, $rootScope, $http, ncbDatabaseClient) {

            var $me = this;

            var ncbClient = new ncbDatabaseClient($me, $scope, "site");
            ncbClient.list();

            this.view = function (object) {

                $scope.object = object;
                $("#siteModal").modal('show');
            }

            this.create = function () {
                $scope.object = {};
                $("#siteModal").modal('show');
            }
            
            $scope.datepickeropen = {};
            this.opendatepicker = function ($event, target) {
                $event.preventDefault();
                $event.stopPropagation();

                $scope.datepickeropen[target] = !$scope.datepickeropen[target];
            }

        });

    })();

</script>

}