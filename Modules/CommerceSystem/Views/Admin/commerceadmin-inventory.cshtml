
@using Newtonsoft.Json;

@inherits NantCom.NancyBlack.NancyBlackRazorViewBase
@{
    Layout = "_admin.cshtml";
}

@section Title
    {
    Administration - Inventory
}
@section Scripts
{
    <script src="/NancyBlack/Modules/CommerceSystem/Views/Admin/commerceadmin-inventory.js"></script>
    <script>

        window.commerceSettings = @this.Html.Raw(this.Site.commerce.ToString());

        var priceData = @this.Html.Raw( this.GetJson( this.Database.Query("SELECT ProductId, AVG(BuyingPrice) as Price FROM InventoryItem GROUP BY ProductId", new { ProductId = 0, Price = 0.0 }) ));
        window.averagePrices = [];
        for (var i = 0; i < priceData.length; i++) {
            var key = priceData[i].ProductId;
            window.averagePrices[key] = priceData[i].Price;
        }

    </script>
}
<div ng-module="InventoryAdminModule">
    <h1 class="page-header">
        Inventory
        <i class="fa fa-spinner fa-circle-o-notch" ng-show="isBusy"></i>
    </h1>

    <div>
        <alert ng-repeat="alert in alerts" type="{{alert.type}}" close="closeAlert($index)">
            {{alert.msg}}
        </alert>
    </div>

    <tabset>
        <tab heading="Inventory Dashboard">

            <div class="row">

                <div class="col-sm-6">

                    <div ng-controller="InventoryNotFullfilled as ctrl">
                        <h2 class="page-header text-primary">
                            Waiting for Order

                            <span class="pull-right">
                                <b class="text-danger">
                                    {{totalBuying | number:2}}
                                </b> /
                                <span class="text-info">
                                    {{totalSelling | number:2}}
                                </span>
                            </span>
                        </h2>
                        <div class="row">

                            <div class="col-sm-6"
                                 ng-repeat="(key, value) in data | groupBy:'SupplierId' | orderBy:'$key'">

                                <div class="panel panel-info">
                                    <div class="panel-heading">
                                        <span ncb-vlookup="supplier" key="{{key}}" label="Name"></span>
                                    </div>
                                    <div class="panel-body">
                                        <table class="table table-striped table-hover table-responsive">

                                            <tbody>
                                                <tr>
                                                    <th width="80%">Item</th>
                                                    <th>Qty</th>
                                                </tr>
                                                <tr ng-repeat="(key, value) in value | groupBy:'ProductId'">
                                                    <td>
                                                        <span ncb-vlookup="product" key="{{key}}" label="Title"></span>
                                                    </td>
                                                    <td>
                                                        {{value.length}}
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

                <div class="col-sm-6">

                    <div ng-controller="InventoryInstock as ctrl">

                        <h2 class="page-header text-success">
                            In Stock

                            <span class="pull-right">
                                <b>{{totalValue | number:2}}</b>
                            </span>
                        </h2>

                        <div style="margin-bottom: 22px">

                            <button class="btn btn-success">
                                <i class="fa fa-check-square-o"></i>
                                Fullfil from stock
                            </button>

                            <button class="btn btn-info"
                                    data-toggle="modal" data-target="#InventoryInboundForm">

                                <i class="fa fa-plus-square"></i>
                                Inbound
                            </button>
                        </div>

                        <table class="table table-striped table-hover table-responsive">

                            <tbody>
                                <tr>
                                    <th width="80%">Item</th>
                                    <th>Qty</th>
                                </tr>
                                <tr ng-repeat="item in data">
                                    <td>
                                        <span ncb-vlookup="product" key="{{item.ProductId}}" label="Title"></span>
                                    </td>
                                    <td>
                                        {{item.Qty}}
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>

                </div>


            </div>

        </tab>

        <tab heading="List">
            <div ncb-datacontext table="InventoryItem">

                <ncb-ngtable tabletemplate="'tablecustomtemplate.html'" modalid="InventoryItemModal">
                </ncb-ngtable>
            </div>

        </tab>

        <tab heading="Inbound List">

            <div ncb-datacontext table="InventoryInbound">

                <ncb-ngtable tabletemplate="'inboundlist.html'" modalid="InventoryInboundModal">
                </ncb-ngtable>

                <script type="text/ng-template" id="inboundlist.html">

                    <table id="NcbNgTable"
                           ncb-datatable
                           class="table table-striped table-hover"
                           style="width: 100%"
                           ng-table="tableParams"
                           show-filter="false">

                        <tr ng-repeat="item in tableParams.data">

                            <td data-title="'Supplier'"
                                sortable="'SupplierId'">
                                <span ncb-vlookup="Supplier" key="{{item.SupplierId}}" label="Name">
                                </span>
                            </td>
                            <td data-title="'Items'"
                                sortable="'Items'">
                                <ul ng-repeat="(key,item) in item.Items | groupBy : 'ProductId'">
                                    <li>
                                        {{item.length}} x <span ncb-vlookup="Product" key="{{key}}">
                                        </span>
                                    </li>
                                </ul>
                            </td>
                            <td data-title="'TotalAmount'"
                                sortable="'TotalAmount'">
                                {{item.TotalAmount | number:2 }}
                            </td>
                            <td style="white-space: nowrap">

                                <button class="btn btn-info"
                                        data-toggle="modal" data-target="#InventoryInboundModal"
                                        ng-click="data.view(item)">
                                    <i class="fa fa-edit"></i>
                                </button>
                            </td>
                        </tr>
                    </table>


                </script>


                <ncb-modal id="InventoryInboundModal"
                           title="Inventory Inbound"
                           closebutton deletebutton>

                    <form role="form" name="InventoryInboundViewForm">

                        <tabset>
                            <tab heading="General">

                                <ncb-datepicker placeholder="Inbound Date"
                                                format="'dd MMMM yyyy'"
                                                model="object.InboundDate"></ncb-datepicker>

                                <div class="form-group">
                                    <b>Supplier: </b> <span ncb-vlookup="supplier" key="{{object.SupplierId}}"></span>
                                </div>

                                <table class="table table-hover"
                                       ncb-listeditor
                                       target="object.Items">
                                    <thead>
                                        <tr>
                                            <th width="50%">Product</th>
                                            <th>Price</th>
                                            <th>Tax</th>
                                            <th width="16px"></th>
                                        </tr>
                                    </thead>
                                    <tr ng-repeat="element in target">
                                        <td>
                                            <span ncb-vlookup="product" key="{{element.ProductId}}"></span>
                                        </td>
                                        <td>
                                            {{element.Price | number:2 }}
                                        </td>
                                        <td>
                                            {{element.Tax | number:2 }}
                                        </td>
                                        <td>
                                            <button class="btn btn-danger"
                                                    ng-disabled="object.id != null"
                                                    ng-click="remove(element)">
                                                <i class="glyphicon glyphicon-remove"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="right" style="font-weight: bold">
                                            <p class="form-control-static">
                                                Gross Product Value (No Tax)
                                            </p>
                                        </td>
                                        <td>
                                            <p class="form-control-static">
                                                {{object.TotalAmountWithoutTax | number: 2}}
                                            </p>
                                        </td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td align="right" style="font-weight: bold">
                                            <p class="form-control-static">
                                                Grand Total
                                            </p>
                                        </td>
                                        <td>
                                            <p class="form-control-static">
                                                {{object.TotalAmount | number:2 }}
                                            </p>
                                        </td>
                                        <td>
                                            <p class="form-control-static">
                                                {{object.TotalTax | number:2 }}
                                            </p>
                                        </td>
                                        <td></td>
                                    </tr>
                                </table>

                            </tab>
                        </tabset>
                    </form>


                    <ncb-footer>
                        <button class="btn btn-primary btn-lg"
                                ng-click="ctrl.save(object)">
                            <span ng-show="object.id == null">Create</span>
                            <span ng-show="object.id != null">Save</span>
                        </button>
                    </ncb-footer>
                </ncb-modal>

            </div>
        </tab>
    </tabset>

    <script type="text/ng-template" id="tablecustomtemplate.html">

        <table id="NcbNgTable"
               ncb-datatable
               class="table table-striped table-hover"
               style="width: 100%"
               ng-table="tableParams"
               show-filter="true">

            <tr ng-repeat="item in tableParams.data">

                <td data-title="'Last Update'"
                    sortable="'__updatedAt'">
                    {{item.__updatedAt | date:'dd MMMM yyyy, HH:mm' }}
                </td>
                <td data-title="'FullFilled'"
                    sortable="'IsFullfilled'"
                    filter="{ 'IsFullfilled': 'text' }">
                    {{item.IsFullfilled }}
                </td>
                <td data-title="'RequestedDate'"
                    sortable="'RequestedDate'">
                    {{item.RequestedDate | date:'dd MMMM yyyy, HH:mm' }}
                </td>
                <td data-title="'InboundDate'"
                    sortable="'InboundDate'">
                    {{item.InboundDate | date:'dd MMMM yyyy, HH:mm' }}
                </td>
                <td data-title="'OutboundDate'"
                    sortable="'OutboundDate'">
                    {{item.OutboundDate | date:'dd MMMM yyyy, HH:mm' }}
                </td>
                <td>
                    <span ncb-vlookup="Product" key="{{item.ProductId}}">
                    </span>
                </td>
                <td data-title="'Note'"
                    sortable="'Note'"
                    filter="{ 'Note': 'text' }">
                    {{item.Note }}
                </td>
                <td data-title="'Buy'"
                    sortable="'BuyingCost'"
                    filter="{ 'BuyingCost': 'text' }">
                    <b>{{item.BuyingCost | number:2 }}</b><br />
                    <span class="text-subtle">{{item.BuyingTax | number:2 }}</span>
                </td>
                <td data-title="'Sell'"
                    sortable="'SellingPrice'"
                    filter="{ 'SellingPrice': 'text' }">
                    <b>{{item.SellingPrice | number:2 }}</b><br />
                    <span class="text-subtle">{{item.SellingTax | number:2 }}</span>
                </td>
            </tr>
        </table>

    </script>

    <ncb-modal id="InventoryItemModal"
               title="{{object.id == null ? 'Create InventoryItem' : 'Edit InventoryItem'}}"
               closebutton deletebutton>
        <form role="form" name="InventoryItemForm">

            <tabset>
                <tab heading="General">

                    <ncb-datepicker placeholder="RequestedDate"
                                    format="'dd MMMM yyyy'"
                                    model="object.RequestedDate"></ncb-datepicker>
                    <ncb-datepicker placeholder="InboundDate"
                                    format="'dd MMMM yyyy'"
                                    model="object.InboundDate"></ncb-datepicker>
                    <ncb-datepicker placeholder="OutboundDate"
                                    format="'dd MMMM yyyy'"
                                    model="object.OutboundDate"></ncb-datepicker>
                    <div class="form-group"
                         ncb-lookupscope
                         table="Product" labelpath="Title" filter="$filter=startswith(name, $key)">

                        <label class="control-label" for="ProductId">
                            ProductId
                            <i class="fa fa-spin fa-circle-o-notch"
                               ng-show="isBusy"></i>
                        </label>

                        <ui-select theme="bootstrap" ng-model="object.ProductId"
                                   reset-search-input="false">
                            <ui-select-match placeholder="Select or find the item">{{$select.selected.label}}</ui-select-match>
                            <ui-select-choices repeat="item.Id as item in lookup track by $index"
                                               refresh="refreshLookup($select.search)"
                                               refresh-delay="0">
                                <span>{{item.label}}</span>
                            </ui-select-choices>
                        </ui-select>
                    </div>
                    <div class="form-group"
                         ncb-lookupscope
                         table="PurchaseOrder" labelpath="Title" filter="$filter=startswith(name, $key)">

                        <label class="control-label" for="PurchaseOrderId">
                            PurchaseOrderId
                            <i class="fa fa-spin fa-circle-o-notch"
                               ng-show="isBusy"></i>
                        </label>

                        <ui-select theme="bootstrap" ng-model="object.PurchaseOrderId"
                                   reset-search-input="false">
                            <ui-select-match placeholder="Select or find the item">{{$select.selected.label}}</ui-select-match>
                            <ui-select-choices repeat="item.Id as item in lookup track by $index"
                                               refresh="refreshLookup($select.search)"
                                               refresh-delay="0">
                                <span>{{item.label}}</span>
                            </ui-select-choices>
                        </ui-select>
                    </div>
                    <div class="form-group"
                         ncb-lookupscope
                         table="SaleOrder" labelpath="Title" filter="$filter=startswith(name, $key)">

                        <label class="control-label" for="SaleOrderId">
                            SaleOrderId
                            <i class="fa fa-spin fa-circle-o-notch"
                               ng-show="isBusy"></i>
                        </label>

                        <ui-select theme="bootstrap" ng-model="object.SaleOrderId"
                                   reset-search-input="false">
                            <ui-select-match placeholder="Select or find the item">{{$select.selected.label}}</ui-select-match>
                            <ui-select-choices repeat="item.Id as item in lookup track by $index"
                                               refresh="refreshLookup($select.search)"
                                               refresh-delay="0">
                                <span>{{item.label}}</span>
                            </ui-select-choices>
                        </ui-select>
                    </div>
                    <input type="text" name="Note" title="Note"
                           ncb-textbox
                           ng-model="object.Note" />
                    <input type="text" name="BuyingCost" title="BuyingCost"
                           ncb-textbox
                           ng-model="object.BuyingCost" />
                    <input type="text" name="BuyingTax" title="BuyingTax"
                           ncb-textbox
                           ng-model="object.BuyingTax" />
                    <input type="text" name="SellingPrice" title="SellingPrice"
                           ncb-textbox
                           ng-model="object.SellingPrice" />
                    <input type="text" name="SellingTax" title="SellingTax"
                           ncb-textbox
                           ng-model="object.SellingTax" />
                    <input type="text" name="IsFullfilled" title="IsFullfilled"
                           ncb-textbox
                           ng-model="object.IsFullfilled" />
                </tab>
                <tab heading="Attachments">
                    <table class="table table-hover"
                           ncb-listeditor
                           target="object.Attachments">
                        <thead>
                            <tr>
                                <th>Attachments</th>
                                <th width="16px"></th>
                            </tr>
                        </thead>
                        <tr ng-repeat="element in target">
                            <td>
                                <input class="form-control"
                                       placeholder="Attachments" disabled
                                       ng-model="element" />
                            </td>
                            <td>
                                <button class="btn btn-danger"
                                        ng-click="remove(element)">
                                    <i class="glyphicon glyphicon-remove"></i>
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input class="form-control"
                                       placeholder="Attachments"
                                       ng-model="newItem" />
                            </td>
                            <td>
                                <button class="btn btn-success"
                                        ng-click="add()">
                                    <i class="glyphicon glyphicon-plus"></i>
                                </button>
                            </td>
                        </tr>
                    </table>

                </tab>

            </tabset>

        </form>

        <ncb-footer>
            <button class="btn btn-primary btn-lg"
                    ng-click="data.save(object)">
                <span ng-show="object.id == null">Create</span>
                <span ng-show="object.id != null">Save</span>
            </button>
        </ncb-footer>
    </ncb-modal>

    <div ncb-datacontext table="InventoryInbound">

        <div ng-controller="InboundController as ctrl">

            <ncb-modal id="InventoryInboundForm" lg
                       title="Inventory Inbound"
                       closebutton deletebutton>

                <form role="form" name="InventoryInboundForm">

                    <tabset>
                        <tab heading="General">

                            <ncb-datepicker placeholder="Inbound Date"
                                            format="'dd MMMM yyyy'"
                                            model="object.InboundDate"></ncb-datepicker>


                            <input type="text" name="PaymentAccount" title="Account that were used to Pay for this Inbound"
                                   ncb-textbox
                                   ng-model="object.PaymentAccount"
                                   typeahead="n for n in autocomplete.account | filter:$viewValue | limitTo:8" />



                            <div class="form-group"
                                 ncb-lookupscope
                                 table="Supplier" labelpath="Name" filter="$filter=startswith(name, $key)">

                                <label class="control-label" for="SupplierId">
                                    Supplier
                                    <i class="fa fa-spin fa-circle-o-notch"
                                       ng-show="isBusy"></i>
                                </label>
                                <ui-select theme="bootstrap" ng-model="object.SupplierId"
                                           reset-search-input="false">
                                    <ui-select-match placeholder="Select or find the item">{{$select.selected.label}}</ui-select-match>
                                    <ui-select-choices repeat="item.Id as item in lookup track by $index"
                                                       refresh="refreshLookup($select.search)"
                                                       refresh-delay="0">
                                        <span>{{item.label}}</span>
                                    </ui-select-choices>
                                </ui-select>
                            </div>

                            <table class="table table-hover"
                                   ncb-listeditor
                                   target="object.Items">
                                <thead>
                                    <tr>
                                        <th width="50%">Product</th>
                                        <th>Price</th>
                                        <th>Tax</th>
                                        <th width="16px"></th>
                                    </tr>
                                </thead>
                                <tr ng-repeat="element in target">
                                    <td>
                                        <span ncb-vlookup="product" key="{{element.ProductId}}"></span>
                                    </td>
                                    <td>
                                        {{element.Price | number:2 }}
                                    </td>
                                    <td>
                                        {{element.Tax | number:2 }}
                                    </td>
                                    <td>
                                        <button class="btn btn-danger"
                                                ng-disabled="object.id != null"
                                                ng-click="remove(element)">
                                            <i class="glyphicon glyphicon-remove"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td ncb-lookupscope
                                        table="Product" labelpath="Title" filter="$filter=startswith(Title, $key) and (startswith(Url, '/products/archive') eq False)">

                                        <ui-select theme="bootstrap" ng-model="newItem.ProductId"
                                                   reset-search-input="false">
                                            <ui-select-match placeholder="Select or find the item">{{$select.selected.label}}</ui-select-match>
                                            <ui-select-choices repeat="item.Id as item in lookup track by $index"
                                                               refresh="refreshLookup($select.search)"
                                                               refresh-delay="0">
                                                <span>{{item.label}}</span>
                                            </ui-select-choices>
                                        </ui-select>
                                    </td>
                                    <td>
                                        <div class="input-group">
                                            <input type="number" class="form-control"
                                                   placeholder="Price" ng-model="newItem.Price">
                                            <div class="input-group-btn">
                                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    TAX Type <span class="caret"></span>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-right">
                                                    <li><a ng-click="ctrl.includeTax(newItem)">Include TAX</a></li>
                                                    <li><a ng-click="ctrl.addTax(newItem)">Add TAX</a></li>
                                                </ul>
                                            </div><!-- /btn-group -->
                                        </div><!-- /input-group -->
                                    </td>
                                    <td>
                                        <input type="number" class="form-control"
                                               placeholder="Tax" ng-model="newItem.Tax" readonly>
                                    </td>
                                    <td>
                                        <button class="btn btn-success"
                                                ng-click="add(); totalToDistribute = ctrl.getTotal(object)">
                                            <i class="glyphicon glyphicon-plus"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td align="right" style="font-weight: bold">
                                        <p class="form-control-static">
                                            Gross Product Value (No Tax)
                                        </p>
                                    </td>
                                    <td>
                                        <p class="form-control-static">
                                            {{object.TotalAmountWithoutTax | number: 2}}
                                        </p>
                                    </td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td align="right" style="font-weight: bold">
                                        <p class="form-control-static">
                                            Amount Paid (without Tax)
                                        </p>
                                    </td>
                                    <td>
                                        <input type="text" class="form-control" placeholder="Total"
                                               ng-model="totalToDistribute">
                                    </td>
                                    <td></td>
                                    <td>
                                        <button class="btn btn-default" type="button"
                                                ng-disabled="totalToDistribute == ctrl.getTotal(object)"
                                                ng-click="ctrl.distributeCost(object, totalToDistribute)">
                                            <i class="fa fa-pie-chart"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td align="right" style="font-weight: bold">
                                        <p class="form-control-static">
                                            Grand Total
                                        </p>
                                    </td>
                                    <td>
                                        <p class="form-control-static">
                                            {{object.TotalAmount | number:2 }}
                                        </p>
                                    </td>
                                    <td>
                                        <p class="form-control-static">
                                            {{object.TotalTax | number:2 }}
                                        </p>
                                    </td>
                                    <td></td>
                                </tr>
                            </table>

                        </tab>
                    </tabset>
                </form>


                <ncb-footer>
                    <button class="btn btn-primary btn-lg"
                            ng-disabled="ctrl.canSave(object) == false"
                            ng-click="ctrl.save(object)">
                        <span ng-show="object.id == null">Create</span>
                        <span ng-show="object.id != null">Save</span>
                    </button>
                </ncb-footer>
            </ncb-modal>
        </div>
    </div>
</div>